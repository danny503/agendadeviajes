extends ../layout/index
block contenido
    main.container.mt-5
        h1.text-center.mb-5 #{pagina}

            .row
                .col-md-12

                    .row.justify-content-center
                        form
                            .form-group 
                                label(for="nombre") Nombre
                                input(type="text" id="nombre" class="form-control" placeholder="Tu nombre", name="nombre")
                            .form-group 
                                label(for="correo") Correo Electronico
                                input(type="email" id="correo" class="form-control" placeholder="Tu correo electronico", name="correo")
                            .form-group 
                                label(for="mensaje") Mensaje
                                textarea#mensaje(class="form-control", name="mensaje", rows="3", placeholder="Tu mensaje")
                            input.btn.btn-success.btn-block(type="submit", value="Agregar")
